<!-- BEGIN footer -->
<div id="footer" role="contentinfo" class="region">
	<h3 class="landmark heading"><%= ts('Footer',key: "footer") %></h3>
  <ul class="navigation actions" role="navigation">
    <% unless !(logged_in? || logged_in_as_admin?) || Skin.in_chooser.empty?%>
      <li class="module group">
        <h4 class="heading"><%= ts('Customize',key: "footer") %></h4>
        <ul class="menu">
          <li aria-haspopup="true">
            <a href="#"><%= ts("Choose Skin",key: "footer") %></a>
            <ul id="skin_chooser" class="expandable secondary">
              <li><%= link_to ts("Default",key: "footer"), unset_skins_path %></li>
              <% Skin.in_chooser.order(:title).each do |s| %>
                <li><%= link_to s.title, set_skin_path(s) %></li>
              <% end %>
            </ul> 
          </li>
        </ul>
      </li>
    <% end %>
    <li class="module group">
      <h4 class="heading"><%= ts('About the Archive',key: "footer") %></h4>
      <ul class="menu">
        <li><%= link_to ts('Site Map',key: "footer"), site_map_path %></li>
        <li><%= link_to ts('Diversity Statement',key: "footer"), diversity_path %></li>
        <li><%= link_to ts('Terms of Service',key: "footer"), tos_path %></li>
      </ul>
    </li>
    <li class="module group">
      <h4 class="heading"><%= ts('Contact Us',key: "footer") %></h4>
      <ul class="menu">
        <li><%= link_to ts('Report Abuse',key: "footer"), new_abuse_report_path %></li>
        <li><%= link_to ts('Technical Support and Feedback',key: "footer"), new_feedback_report_path %></li>
      </ul>
    </li>
    <li class="module group">
      <h4 class="heading"><%= ts('Development',key: "footer") %></h4>
      <ul class="menu">
        <% unless ArchiveConfig.REVISION.blank? %>
          <li><%= link_to ts('otwarchive %{rev_number}',key: "footer", :rev_number => ArchiveConfig.REVISION), "https://github.com/otwcode/otwarchive/commits/#{ArchiveConfig.REVISION}" %></li>
        <% end %>
        <li><%= link_to ts('Known Issues',key: "footer"), known_issues_path %></li>
        <li><a href="http://creativecommons.org/licenses/GPL/2.0/" title="<%= ts('View License',key: "footer") %>">GPL/CC</a> <%= ts('by the',key: "footer") %> <a href="http://transformativeworks.org/" title="<%= ts('The Organization for Transformative Works',key: "footer") %>"><%= ts('OTW',key: "footer") %></a></li>
      </ul>
    </li>
  </ul>
</div>
<!-- END footer -->

