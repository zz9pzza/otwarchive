<% content_for :message do %>
<%= t 'user_mailer.invite_request_declined.hello', user: @user.login %>
<% if @total == 1 then invitation = t 'user_mailer.invite_request_declined.invitation' else invitation = t 'user_mailer.invite_request_declined.invitations' end %>
<%= t 'user_mailer.invite_request_declined.html.decline', total: @total, invitation: invitation  %>
<%= t 'user_mailer.invite_request_declined.decline_reason' %>
<%= to_plain_text(raw @reason) %>

<%= t 'user_mailer.invite_request_declined.regards' %>
AO3
<% end %>
