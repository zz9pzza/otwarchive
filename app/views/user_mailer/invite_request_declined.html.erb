<% content_for :message do %>
  <p><%= t('user_mailer.hello', user: style_bold(@user.login)).html_safe %>

  <p><%= t('user_mailer.invite_request_declined.decline', total: @total, invitation: @total == 1 ? t('user_mailer.invite_request_declined.invitation') : t('user_mailer.invite_request_declined.invitations')).html_safe %></p>
  <p><%= t 'user_mailer.invite_request_declined.decline_reason' %></p>
  <p><%= style_quote(@reason) %></p>

  <p><%= t 'user_mailer.invite_request_declined.regards' %></p>
  <p><%= style_link(ArchiveConfig.APP_SHORT_NAME, root_path) %></p>
<% end %>


